<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasksreminders">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_tasksreminders"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_tasksreminders_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TasksReminders">
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.tasks.DetailTasksActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.tasks.InsertTasksActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>